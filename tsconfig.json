{
    "include": [
        "./src/ts/**/*.ts"
    ],
    "exclude": [
        "./node_modules/*"
    ],
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": ["es6", "dom"],
        "outDir": "./dist/js/",
        "strict": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    }
}
